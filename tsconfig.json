{
  "compilerOptions": {
    "strict": true,
    "target": "ES2015",
    "module": "ES2020",
    "declaration": true,
    "declarationDir": "build/types",
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "skipLibCheck": true
  }
}
